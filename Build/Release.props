<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <Version>0.5</Version>
        <VersionStartYear>2011</VersionStartYear>
        
        <!-- Build Dates are YMMdd - Where "Y" is the Year of the Version, which is CurrentYear - VersionStartYear + 1 -->
        <BuildDate>$([MSBuild]::Add(1, $([MSBuild]::Subtract($([System.DateTime]::Now.Year), $(VersionStartYear)))))$([System.DateTime]::Now.ToString("MMdd"))</BuildDate>
        <BuildNumber Condition="'$(BuildNumber)' == ''">0</BuildNumber>
        <FullVersion>$(Version).$(BuildDate).$(BuildNumber)</FullVersion>
    </PropertyGroup>
</Project>