<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:System="clr-namespace:System;assembly=mscorlib"
	x:Class="PsGet.Installer.Completed"
	x:Name="Page"
	WindowTitle="Install Complete"
	FlowDirection="LeftToRight"
	Width="{DynamicResource WindowWidth}"
	WindowWidth="640" WindowHeight="480">

	<StackPanel x:Name="LayoutRoot" Margin="5">
		<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Install Complete!" FontSize="21.333"/>
		<TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,8,0,0"><Run Text="Don't forget to add "/><Run FontFamily="Consolas" Text="&quot;Import-Module PS-Get&quot;"/><Run Text=" to your PowerShell Profile!"/></TextBlock>
		<Button Content="Close Installer" Margin="0,8,0,0" HorizontalAlignment="Center" Height="25" Click="Button_Click"/>
	</StackPanel>
</Page>